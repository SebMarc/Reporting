{% extends 'base.html.twig' %}

{% block title %}Administration du Site{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('asset/css/admin.css') }}">
{% endblock %}

{% block header %}
    {{ parent() }}
    {% include 'backend/layout/_admin_header.html.twig' %}
{% endblock %}

{% block body %}

<h1 class="text-center mt-4">Liste des magasins</h1>

    <div class="container text-center">

    <div class="d-flex justify-content-around flex-wrap">


        <button type="button" class="btn btn-warning mb-4" data-toggle="modal" data-target="#AddUniversModal">➕ Ajouter un magasin</button>
    </div>

    <div class="modal fade" id="AddUniversModal" tabindex="-1" role="dialog" aria-labelledby="AddUniversModal" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="AddUniversModalLabel">Ajouter un magasin</h5>
                    <button type="button" class="close " data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
               {#} {% form_theme form with ['bootstrap_4_horizontal_layout.html.twig'] only %}
                {{ form_start(form) }}
                    <div class="modal-body">
                        {{ form_row(form.name) }}
                        <div class="form-group row">
                            <label for="add_shop_enable" class="col-form-label col-sm-2">Activer</label>
                            <div class="col-sm-10" data-children-count="1">
                                {{ form_row(form.enable, {'attr': {'class': 'switch form-control'}}) }}
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Ajouter</button>
                    </div>
                {{ form_end(form) }}{#}
            </div>
        </div>
    </div>

        <table class="table table-striped table-responsive text-center">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Adresse</th>
                    <th scope="col">Code Postal</th>
                    <th scope="col">Ville</th>
                    <th scope="col">Telephone</th>
                    <th scope="col">Fax</th>
                    <th scope="col">Manager</th>
                    <th scope="col">Fermeture</th>
                    <th scope="col">Actif</th>
                </tr>
            </thead>
            <tbody>
                {% for shop in shops %}
                    <tr>
                        <td>{{ shop.id }}</td>
                        <td>{{ shop.name }}</td>
                        <td>{{ shop.adress }}</td>
                        <td>{{ shop.postalCode }}</td>
                        <td>{{ shop.city }}</td>
                        <td>{{ shop.phone }}</td>
                        <td>{{ shop.fax }}</td>
                        <td>{{ shop.manager }}</td>
                        <td>{{ shop.close }}</td>
                        <td>{{ shop.enable ? "Oui" : "Non" }}</td>
                        
                        <td class="table__data--edit">
                            <a href="{{ path('backend_shop_edit', {'id' : shop.id}) }}"><i class="fa fa-pencil-square-o edit__icon"></i></a>
                        </td>
                        {#<td class="table__data--delete">
                            <form action="{{ path('backend_univers_delete', {'id' : univers.id}) }}" method="post" onsubmit="return confirm('Voulez vous vraiment supprimez l\'univers ?');">
                                <input type="hidden" name="token" value="{{ csrf_token('delete-item') }}">
                                <button type="submit" class="btn justify-content-center delete__button"><i class="fa fa-trash-o delete__icon"></i></button>
                            </form>
                        </td>{#}
                    </tr>
                {% else %}
                    <tr class="text-center">
                        <td colspan="8">Aucun résultat !</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        
    </div>
{% endblock %}